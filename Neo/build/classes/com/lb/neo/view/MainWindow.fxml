<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lb.neo.view.MainWindowController">
   <children>
      <MenuBar fx:id="neoMenuBar" prefHeight="30.0" prefWidth="600.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
      <TextArea fx:id="inputArea" layoutX="14.0" layoutY="29.0" prefHeight="304.0" prefWidth="285.0" promptText="Enter your code here..." AnchorPane.bottomAnchor="100.0" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="40.0" />
      <TextArea fx:id="outputArea" layoutX="386.0" layoutY="40.0" prefHeight="360.0" prefWidth="285.0" promptText="Output will display here..." AnchorPane.bottomAnchor="100.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="40.0" />
      <Label layoutX="10.0" layoutY="367.0" text="Set Input Mode:" AnchorPane.bottomAnchor="16.0" AnchorPane.leftAnchor="10.0" />
      <ChoiceBox fx:id="inputModeBox" layoutX="118.0" layoutY="362.0" prefHeight="27.0" prefWidth="178.0" AnchorPane.bottomAnchor="11.0" />
      <ButtonBar layoutX="390.0" layoutY="354.0" prefHeight="30.0" prefWidth="200.0" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0">
        <buttons>
          <Button fx:id="runButton" mnemonicParsing="false" onAction="#handleRunAction" text="Run" />
            <Button fx:id="debugButton" mnemonicParsing="false" onAction="#handleDebugAction" text="Debug" />
            <Button fx:id="resetButton" mnemonicParsing="false" onAction="#handleResetAction" text="Reset" />
        </buttons>
      </ButtonBar>
      <Label layoutX="10.0" layoutY="426.0" text="Choose CPU:" AnchorPane.bottomAnchor="57.0" AnchorPane.leftAnchor="10.0" />
      <ChoiceBox fx:id="chooseCPUBox" layoutX="118.0" layoutY="421.0" prefHeight="27.0" prefWidth="178.0" AnchorPane.bottomAnchor="52.0" />
      <Label layoutX="334.0" layoutY="426.0" text="You can find help under Help &gt; Show Help" AnchorPane.bottomAnchor="57.0" AnchorPane.rightAnchor="10.0" />
   </children>
</AnchorPane>
